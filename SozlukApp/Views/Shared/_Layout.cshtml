<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EnglishCourse</title>
    <link rel="icon" href="~/favicon.ico" />
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SozlukApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SozlukApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>

        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">EnglishCourse</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                         <li class="nav-item">
                            <a class="nav-link text-nowrap @(ViewContext.RouteData.Values["Action"]?.ToString() == "Courses" ? "text-primary fw-bold" : "text-dark")" asp-area="" asp-controller="Home" asp-action="Courses">Kurslar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-nowrap @(ViewContext.RouteData.Values["Action"]?.ToString() == "Dictionary" ? "text-primary fw-bold" : "text-dark")" asp-area="" asp-controller="Home" asp-action="Dictionary">Sözlük</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-nowrap @(ViewContext.RouteData.Values["Action"]?.ToString() == "LevelTest" ? "text-primary fw-bold" : "text-dark")" asp-area="" asp-controller="Home" asp-action="LevelTest">Seviye Belirleme</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-nowrap @(ViewContext.RouteData.Values["Action"]?.ToString() == "About" ? "text-primary fw-bold" : "text-dark")" asp-area="" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-nowrap @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "text-primary fw-bold" : "text-dark")" asp-area="" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin") || User.Identity.Name == "tonusomer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-nowrap text-dark fw-bold" asp-controller="Admin" asp-action="Panel">Admin Paneli</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                             @await Component.InvokeAsync("UserProfile")
                        }


                        @if (User.Identity == null || !User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Giriş</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted mt-auto mb-3">
        <div class="container text-center">
            &copy; 2025 - EnglishCourse - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
        </div>
    </footer>
    <!-- WhatsApp Widget -->
    <a href="https://wa.me/905551234567" class="whatsapp-float" target="_blank" title="WhatsApp ile İletişime Geçin">
        <i class="bi bi-whatsapp"></i>
    </a>

    <style>
        .whatsapp-float {
            position: fixed;
            width: 60px;
            height: 60px;
            bottom: 40px;
            right: 40px;
            background-color: #25d366;
            color: #FFF;
            border-radius: 50px;
            text-align: center;
            font-size: 30px;
            box-shadow: 2px 2px 3px #999;
            z-index: 100;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            animation: pulse-green 2s infinite;
        }

        .whatsapp-float:hover {
            background-color: #128C7E;
            color: white;
        }

        @@keyframes pulse-green {
            0% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0.7);
            }
            70% {
                transform: scale(1);
                box-shadow: 0 0 0 10px rgba(37, 211, 102, 0);
            }
            100% {
                transform: scale(0.95);
                box-shadow: 0 0 0 0 rgba(37, 211, 102, 0);
            }
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
