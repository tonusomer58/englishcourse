@{
    ViewData["Title"] = "Kurslar";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Eğitim Paketlerimiz</h1>
        <p class="lead text-muted">İhtiyacınıza en uygun paketi seçin ve İngilizceyi hemen öğrenmeye başlayın.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm hover-card border-primary">
                <div class="card-header py-3 text-white bg-primary border-primary">
                    <h4 class="my-0 fw-normal">Başlangıç</h4>
                </div>
                <div class="card-body d-flex flex-column">
                    <h1 class="card-title pricing-card-title">₺499<small class="text-muted fw-light">/ay</small></h1>
                    <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                        <li>✅ Temel Gramer Dersleri</li>
                        <li>✅ Haftalık 2 Saat Video</li>
                        <li>✅ Kelime Ezberleme Aracı</li>
                        <li>✅ PDF Kaynaklar</li>
                        <li>✅ Mobil Erişim</li>
                        <li>❌ Canlı Konuşma Pratiği</li>
                        <li>❌ Birebir Mentorluk</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-outline-primary mt-auto">Hemen Başla</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm hover-card border-primary">
                <div class="card-header py-3 text-white bg-primary border-primary">
                    <h4 class="my-0 fw-normal">Profesyonel</h4>
                </div>
                <div class="card-body d-flex flex-column">
                    <h1 class="card-title pricing-card-title">₺899<small class="text-muted fw-light">/ay</small></h1>
                    <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                        <li>✅ İleri Seviye Gramer</li>
                        <li>✅ Haftalık 5 Saat Video</li>
                        <li>✅ Sınırsız Kelime Testi</li>
                        <li>✅ 2 Saat Canlı Ders</li>
                        <li>✅ Yazma Değerlendirmesi</li>
                        <li>✅ Sertifika İmkanı</li>
                        <li>❌ 7/24 Destek</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary mt-auto">En Popüler</button>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-4 rounded-3 shadow-sm hover-card border-primary">
                <div class="card-header py-3 text-white bg-primary border-primary">
                    <h4 class="my-0 fw-normal">VIP (Birebir)</h4>
                </div>
                <div class="card-body d-flex flex-column">
                    <h1 class="card-title pricing-card-title">₺1999<small class="text-muted fw-light">/ay</small></h1>
                    <ul class="list-unstyled mt-3 mb-4 flex-grow-1">
                        <li>✅ Kişiye Özel Program</li>
                        <li>✅ 7/24 Eğitmen Desteği</li>
                        <li>✅ Sınırsız Canlı Ders</li>
                        <li>✅ IELTS/TOEFL Hazırlık</li>
                        <li>✅ Mülakat Simülasyonları</li>
                        <li>✅ Yurt Dışı Danışmanlığı</li>
                        <li>✅ Ömür Boyu Erişim</li>
                    </ul>
                    <button type="button" class="w-100 btn btn-lg btn-primary mt-auto">İletişime Geç</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease;
        height: 100%;
        min-height: 500px;
    }
    .hover-card:hover {
        transform: translateY(-10px);
    }
    .card-body {
        font-size: 1.1rem;
    }
</style>
