@model IEnumerable<SozlukApp.Models.Word>
@{
    ViewData["Title"] = "Sözlük";
}

<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-lg-6 mb-3 mb-lg-0">
             <h2 class="display-6 fw-bold text-primary">Kelime Listesi</h2>
             <p class="text-muted">Topluluğumuz tarafından eklenen en güncel kelimeler.</p>
        </div>
        <div class="col-lg-6">
             <form asp-controller="Home" asp-action="Dictionary" method="get" class="d-flex flex-column flex-lg-row gap-2 justify-content-lg-end">
                 @if (User.Identity != null && User.Identity.IsAuthenticated)
                 {
                     <a asp-controller="Word" asp-action="Add" class="btn btn-primary shadow-sm text-nowrap">
                         <i class="bi bi-plus-circle"></i> @(User.IsInRole("Admin") ? "Kelime Ekle" : "Kelime Öner")
                     </a>
                 }
                 <div class="input-group search-container">
                     <input type="text" id="searchInput" name="searchString" class="form-control" placeholder="Kelime ara..." value="@ViewData["CurrentFilter"]">
                     <button class="btn btn-outline-primary" type="submit">
                         <i class="bi bi-search"></i>
                     </button>
                 </div>
             </form>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div id="dictionaryList" class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var word in Model)
        {
            <div class="col dictionary-item">
                <div class="card h-100 shadow-sm border-0 hover-effect">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                             <h4 class="card-title text-primary fw-bold mb-0">@word.Turkish</h4>
                             <span class="badge bg-light text-dark border">En</span>
                        </div>
                        <h5 class="card-subtitle mb-3 text-muted">@word.English</h5>
                        <p class="card-text text-secondary">@word.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
        background-color: #fff;
    }
    .hover-effect:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
    
    .search-container {
        width: 100%;
    }
    
    @@media (min-width: 992px) {
        .search-container {
            width: 300px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const dictionaryItems = document.querySelectorAll('.dictionary-item');

        searchInput.addEventListener('keyup', function() {
            const searchTerm = this.value.toLowerCase();

            dictionaryItems.forEach(item => {
                const turkishText = item.querySelector('.card-title')?.textContent.toLowerCase() || "";
                const englishText = item.querySelector('.card-subtitle')?.textContent.toLowerCase() || "";
                
                if (turkishText.includes(searchTerm) || englishText.includes(searchTerm)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    });
</script>
